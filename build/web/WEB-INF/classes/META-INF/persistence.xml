<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="WebApp-TicketAssistancePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.teddyedo.entities.Apparecchio</class>
    <class>com.teddyedo.entities.Cliente</class>
    <class>com.teddyedo.entities.PDA</class>
    <class>com.teddyedo.entities.Riparatore</class>
    <class>com.teddyedo.entities.Rivenditore</class>
    <class>com.teddyedo.entities.TV</class>
    <class>com.teddyedo.entities.Telefono</class>
    <class>com.teddyedo.entities.Ticket</class>
    <class>com.teddyedo.entities.Utente</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/TicketDatabase"/>
      <property name="javax.persistence.jdbc.user" value="USER1"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="USER1"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
